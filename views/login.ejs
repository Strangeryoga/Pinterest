<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1682687220363-35e4621ed990?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxlZGl0b3JpYWwtZmVlZHwyMXx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center">
    <div class="w-[25vw] h-[70vh] bg-white px-16 py-10 rounded-[30px]">
      <!--pinterest logo-->
     
      <div class="relative inset-0 flex">
        <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="m-auto w-[70px]" />
      </div>
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none mt-3">Welcome to Pinterest</h1>

      <% if(error.length > 0){ %>
        <p class="error"><%= error %></p>
        <% } %>
      <form action="/login" method="post">
        <input class="block mt-2 w-full px-3 py-2  rounded-full" type="text" name="username" placeholder="Username"/>
        <input class="block mt-2 w-full px-3 py-2  rounded-full" type="password" name="password" placeholder="Password" />
        <a class="mt-2 font-semibold text-zinc-500 inline-block text-semibold" href="/forget">Forgot your password?</a>
        <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer" type="submit" value="Login" id=""/>
      </form>


      <footer>
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <hr />
       Not on Pinterest yet? <a href="/" class="font-semibold"> Sign up</a>
      </footer>
    </div>
  </div>

  
  <% include ./partials/footer.ejs %>
